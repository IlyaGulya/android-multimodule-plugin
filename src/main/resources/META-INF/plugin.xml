<idea-plugin>
    <id>ru.hh.android.plugin</id>
    <name>HeadHunter Android</name>
    <vendor
            email="p.strelchenko@hh.ru"
            url="https://github.com/hhru/android-multimodule-plugin">
        HeadHunter
    </vendor>

    <description><![CDATA[
    Enable new option - create feature module in Android application
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>org.intellij.groovy</depends>
    <depends>org.jetbrains.android</depends>

    <idea-version since-build="163"/>

    <actions>
        <group description="HeadHunter architecture templates" id="HeadHunterActionGroup" text="HeadHunter">
            <separator/>

            <action id="ru.hh.android.plugin.action.OpenFeatureModuleWizardAction"
                    class="ru.hh.android.plugin.action.OpenFeatureModuleWizardAction"
                    text="New feature module..." description="Open feature module creation wizard">
                <add-to-group group-id="NewGroup" anchor="last"/>
            </action>
        </group>
    </actions>

    <project-components>
        <component>
            <implementation-class>
                ru.hh.android.plugin.wizard.step.choose_applications.ChooseApplicationsPresenter
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                ru.hh.android.plugin.wizard.step.choose_main_parameters.ChooseMainParametersPresenter
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                ru.hh.android.plugin.wizard.step.choose_modules.ChooseModulesPresenter
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                ru.hh.android.plugin.component.main_parameters.MainParametersInteractor
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.component.module.ModuleInteractor
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.component.module.ModuleRepository
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.model.converter.CreateModuleConfigConverter
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.generator.FeatureModuleGenerator
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.component.NotificationsFactory
            </implementation-class>
        </component>
    </project-components>


    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
                id="ru.hh.android.plugin.config.PluginConfigConfigurable"
                groupId="appearance"
                displayName="HeadHunter plugin"
                instance="ru.hh.android.plugin.config.PluginConfigConfigurable"/>
        <projectService
                serviceInterface="ru.hh.android.plugin.config.PluginConfig"
                serviceImplementation="ru.hh.android.plugin.config.PluginConfig"/>
    </extensions>


</idea-plugin>