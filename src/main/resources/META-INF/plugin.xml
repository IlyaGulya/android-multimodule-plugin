<idea-plugin>
    <id>ru.hh.android.plugins.android_feature_module</id>
    <name>Android feature module creation plugin</name>
    <vendor email="p.strelchenko@hh.ru" url="https://hh.ru">HeadHunter</vendor>

    <description><![CDATA[
    Enable new option - create feature module in Android application
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>org.intellij.groovy</depends>
    <depends>org.jetbrains.android</depends>

    <idea-version since-build="163"/>

    <actions>
        <group description="HeadHunter architecture templates" id="HeadHunterActionGroup" text="HeadHunter">
            <separator/>

            <action id="ru.hh.android.plugin.feature_module.action.OpenFeatureModuleWizardAction"
                    class="ru.hh.android.plugin.feature_module.action.OpenFeatureModuleWizardAction"
                    text="New feature module..." description="Open feature module creation wizard">
                <add-to-group group-id="NewGroup" anchor="last"/>
            </action>
        </group>
    </actions>

    <project-components>
        <component>
            <implementation-class>
                ru.hh.android.plugin.feature_module.wizard.step.choose_applications.ChooseApplicationsPresenter
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                ru.hh.android.plugin.feature_module.wizard.step.choose_main_parameters.ChooseMainParametersPresenter
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                ru.hh.android.plugin.feature_module.wizard.step.choose_modules.ChooseModulesPresenter
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                ru.hh.android.plugin.feature_module.component.main_parameters.MainParametersInteractor
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.feature_module.component.module.ModuleInteractor
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.feature_module.component.module.ModuleRepository
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.feature_module.model.converter.CreateModuleConfigConverter
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.feature_module.generator.FeatureModuleGenerator
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.feature_module.generator.templates.ModuleFilesFactory
            </implementation-class>
        </component>
        <component>
            <implementation-class>ru.hh.android.plugin.feature_module.component.NotificationsFactory
            </implementation-class>
        </component>
    </project-components>


    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
                id="ru.hh.android.plugin.config.PluginConfigConfigurable"
                groupId="appearance"
                displayName="HeadHunter plugin"
                instance="ru.hh.android.plugin.feature_module.config.PluginConfigConfigurable"/>
        <projectService
                serviceInterface="ru.hh.android.plugin.feature_module.config.PluginConfig"
                serviceImplementation="ru.hh.android.plugin.feature_module.config.PluginConfig"/>
    </extensions>


</idea-plugin>